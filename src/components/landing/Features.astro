---
    import featjson from '../../config/features.json'
---

<h1 class="text-center text-5xl font-bold mt-10">Features</h1>

<div class="grid md:grid-cols-3 gap-4 p-4">
    {
        featjson.map((feature) => (
        <div class="bg-slate-800 p-10 rounded-xl ">
        <h2 class="text-center font-bold text-2xl my-3">{feature.title}
        </h2>
        <p>{feature.description}</p>
        </div>
        ))
    }
</div>